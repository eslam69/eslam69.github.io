---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
export const myName = "Eslam Khaled";
const posts = await getCollection('blog');
const featuredPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout title={myName +" - Personal Website"}>
  <section class="py-12 text-center">
    <img
      src="https://avatars.githubusercontent.com/u/43995832?v=4"
      alt={myName}
      class="w-32 h-32 rounded-full mx-auto mb-6"
    />
    <h1 class="text-4xl font-bold mb-4">{myName}</h1>
    <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
      Software Developer & Tech Enthusiast
    </p>
    <div class="flex justify-center gap-4 mb-8">
      <a
        href="/cv"
        class="px-6 py-3 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors"
      >
        View CV
      </a>
      <a
        href="/projects"
        class="px-6 py-3 bg-gray-200 dark:bg-gray-800 hover:bg-gray-300 dark:hover:bg-gray-700 rounded-lg transition-colors"
      >
        See Projects
      </a>
    </div>
    <div class="flex justify-center gap-6">
      <a
        href="mailto:eslaamkhaled64@gmail.com"
        class="social-link"
        title="Email"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </a>
      <a
        href="https://github.com/eslam69"
        class="social-link"
        title="GitHub"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
      <a
        href="https://linkedin.com/in/eslam64"
        class="social-link"
        title="LinkedIn"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
        </svg>
      </a>
      <a
        href="https://huggingface.co/eslam25"
        class="social-link"
        title="Hugging Face"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg class="h-6 w-6" viewBox="0 0 120 100" fill="currentColor">
          <path d="M60 0C26.863 0 0 26.863 0 60c0 33.137 26.863 60 60 60s60-26.863 60-60C120 26.863 93.137 0 60 0zm0 98.182c-21.088 0-38.182-17.094-38.182-38.182S38.912 21.818 60 21.818 98.182 38.912 98.182 60 81.088 98.182 60 98.182zm-9.545-43.636a7.273 7.273 0 100-14.546 7.273 7.273 0 000 14.546zm38.181 0a7.273 7.273 0 100-14.546 7.273 7.273 0 000 14.546zM60 87.273c12.045 0 21.818-9.773 21.818-21.818H38.182C38.182 77.5 47.955 87.273 60 87.273z"/>
        </svg>
      </a>
    </div>
  </section>

  <section class="py-12">
    <h2 class="text-3xl font-bold mb-6">About Me</h2>
    <p class="text-gray-600 dark:text-gray-300 mb-4">
      I'm a Software Engineer with a Master's in AI and Robotics from the University of Ottawa, and a strong background in Systems & Biomedical Engineering from Cairo University. My academic journey has been shaped by a blend of theoretical learning and practical experience. I've explored various technical domains, including software engineering, autonomous systems, machine learning, optimization, computational neuroscience, signal processing and embedded systems. Proficient in languages like C, C++, and Python, I've gained hands-on experience with frameworks such as TensorFlow, Qt, and ROS. I thrive on continuous learning, always eager to explore new technologies and stay abreast of industry advancements. As a T-shaped learner, I harness my broad knowledge base to tackle challenges creatively while diving deep into specialized areas to drive innovation.
    </p>
    <p class="text-gray-600 dark:text-gray-300">
      T-shaped learner, building expertise with depth and breadth.

    </p>
  </section>

  <section class="py-12">
    <h2 class="text-3xl font-bold mb-6">Featured Articles</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {featuredPosts.map(post => (
        <a href={`/blog/${post.slug}`} class="group">
          <article class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden hover:shadow-lg transition-shadow">
            {post.data.coverImage && (
              <img
                src={post.data.coverImage}
                alt={post.data.title}
                class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
              />
            )}
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400">
                {post.data.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {post.data.description}
              </p>
              <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                <time datetime={post.data.pubDate.toISOString()}>
                  {post.data.pubDate.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
                <span>{post.data.readingTime} min read</span>
              </div>
            </div>
          </article>
        </a>
      ))}
    </div>
    <div class="text-center mt-8">
      <a
        href="/blog"
        class="inline-flex items-center gap-2 px-6 py-3 bg-gray-200 dark:bg-gray-800 hover:bg-gray-300 dark:hover:bg-gray-700 rounded-lg transition-colors"
      >
        Read More Articles
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </section>

